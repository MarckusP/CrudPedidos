<Window x:Class="CrudPedidos.Views.ProdutoListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Produtos" Height="500" Width="1379" WindowStartupLocation="CenterOwner">

    <DockPanel LastChildFill="True">

        <!-- Linha 1: filtros de busca -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" HorizontalAlignment="Left">
            <TextBlock Text="Nome:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Width="180" Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0"/>

            <TextBlock Text="Código:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Width="140" Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0"/>

            <TextBlock Text="Valor de:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Width="80" Text="{Binding FiltroValorMin, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,6,0"/>
            <TextBlock Text="até" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Width="80" Text="{Binding FiltroValorMax, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,0"/>

            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox Width="70" SelectedValue="{Binding FiltroStatus, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Content">
                <ComboBoxItem Content="Ativo"/>
                <ComboBoxItem Content="Inativo"/>
                <ComboBoxItem Content="Ambos"/>
            </ComboBox>

            <Button Content="Filtrar" Width="80" Margin="12,0,6,0" Command="{Binding FiltrarCommand}"/>
            <Button Content="Limpar" Width="80" Command="{Binding LimparCommand}"/>
        </StackPanel>

        <!-- Linha 2: ações -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" HorizontalAlignment="Left">
            <Button Content="Incluir" Width="90" Margin="0,0,6,0" Command="{Binding IncluirCommand}"/>
            <Button Content="Editar" Width="90" Margin="0,0,6,0" Command="{Binding EditarCommand}"/>
            <Button Content="Alterar Status" Width="120" Margin="0,0,6,0" Command="{Binding AlternarAtivoCommand}"/>
            <Button Content="Excluir" Width="100" Margin="0,0,6,0" Command="{Binding ExcluirCommand}"/>
        </StackPanel>

        <!-- DataGrid ocupa todo o espaço restante -->
        <DataGrid AutoGenerateColumns="False" Margin="8" IsReadOnly="True" SelectionMode="Single"
                  ItemsSource="{Binding Produtos}" SelectedItem="{Binding Selected}"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding StatusDescricao}" Width="100"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat={}{0:N2}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
