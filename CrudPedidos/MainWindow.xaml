<Window x:Class="CrudPedidos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Pedidos"
        Height="450" Width="800"
        Icon="Resources/logo.ico">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="Resources/logo.png" Width="120" Height="120" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Sistema de Pedidos" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,24"/>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Button x:Name="BtnPessoas" Content="Pessoas" Width="160" Height="40" Margin="0,0,0,12" Click="BtnPessoas_Click" />
                <Button x:Name="BtnProdutos" Content="Produtos" Width="160" Height="40" Margin="0,0,0,12" Click="BtnProdutos_Click" />
                <Button x:Name="BtnPedidos" Content="Pedidos" Width="160" Height="40" Click="BtnPedidos_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
